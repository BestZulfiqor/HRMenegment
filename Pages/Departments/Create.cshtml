@page
@model HRManagement.Pages.Departments.CreateModel

<h1>Создать отдел</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Department.Name">Имя отдела</label>
        <input asp-for="Department.Name" class="form-control" />
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department.Description">Описание отдела</label>
        <textarea asp-for="Department.Description" class="form-control"></textarea>
        <span asp-validation-for="Department.Description" class="text-danger"></span>
    </div>
    <button style="margin: 15px 0px;" type="submit" class="btn btn-primary">Создать</button>
</form>