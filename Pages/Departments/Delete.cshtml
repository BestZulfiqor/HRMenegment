@page "{id:int}"
@model HRManagement.Pages.Departments.DeleteModel

<h1>Удаление отдела</h1>

<p>Вы уверены что хотите удалить этот отдел?</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd>
        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Department.Description</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Department.Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>