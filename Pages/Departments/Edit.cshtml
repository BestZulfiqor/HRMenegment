@page "{id:int}"
@model HRManagement.Pages.Departments.EditModel

<h1>Обновление отдела</h1>

<form method="post">
    <input type="hidden" asp-for="Department.Id" />
    <div class="form-group">
        <label asp-for="Department.Name">Имя</label>
        <input asp-for="Department.Name" class="form-control" />
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department.Description">Описание</label>
        <textarea asp-for="Department.Description" class="form-control"></textarea>
        <span asp-validation-for="Department.Description" class="text-danger"></span>
    </div>
    <button style="margin: 15px 0px;" type="submit" class="btn btn-primary">Сохранить</button>
</form>
