@page
@model HRManagement.Pages.Positions.EditModel
@{
    ViewData["Title"] = "Edit Position";
}

<h1>Обновить должность</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position.Id" />
            <div class="form-group">
                <label asp-for="Position.Title" class="control-label">Имя</label>
                <input asp-for="Position.Title" class="form-control" />
                <span asp-validation-for="Position.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.Description" class="control-label">Описание</label>
                <textarea asp-for="Position.Description" class="form-control"></textarea>
                <span asp-validation-for="Position.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.MinSalary" class="control-label">Мин. Зарплата</label>
                <input asp-for="Position.MinSalary" class="form-control" />
                <span asp-validation-for="Position.MinSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position.MaxSalary" class="control-label">Макс. Зарплата</label>
                <input asp-for="Position.MaxSalary" class="form-control" />
                <span asp-validation-for="Position.MaxSalary" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>